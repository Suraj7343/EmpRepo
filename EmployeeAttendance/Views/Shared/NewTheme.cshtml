                        <li>@Html.ActionLink("Home", "Index", "Employee", null, new { id = "Home" })</li>
                        <li>@Html.ActionLink("AddDepartment", "Index", "DepartmentAndProject", null, new { id = "Department" })</li>
                        <li>@Html.ActionLink("LeaveNotification", "Notification", "Employee", null, new { id = "LeaveNotification" })</li>
                        <li>@Html.ActionLink("TotalTimeOfEmployees", "TotalTimeOfEmployees", "Employee", null, new { id = "TotalTimeOfEmployees" })</li>
                        <li>@Html.ActionLink("ProjectManagement", "Projects", "DepartmentAndProject", null, new { id = "Projects" })</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li style="align-content:center">
                            @if (Session["userName"] != null)
                            {
                            <a class="text-white">@Session["userName"]</a>
                                @*<input type="text" class="btn btn-primary" value="@TempData["userName"]"/>*@
                                @*@TempData["userName"]*@
                            }
