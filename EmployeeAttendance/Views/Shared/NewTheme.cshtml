                            @Html.ActionLink("Logout", "LogOff", "Employee", null, new { id = "Logout" })
                        </li>
                    </ul>
                </div>

            }
            else if (isAdmin == 0)
            {
                <div class="navbar-collapse collapse">
                    @*<ul class="nav navbar-nav navbar-left">
                        <li style="align-content:center">
                            @Html.ActionLink("<", "Index", "DashBoard", null, new { id = "<" })
                        </li>
                    </ul>*@
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Home", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })</li>*@
                        <li>@Html.ActionLink("ApplyLeave", "Leave", "DashBoard", null, new { id = "ApplyLeave" })</li>
                        <li>@Html.ActionLink("LeaveNotification", "LeaveNotification", "DashBoard", null, new { id = "LeaveNotification" })</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li style="align-content:center">
                            @if (Session["userName"] != null)
                            {
                                <a class="text-white">@Session["userName"]</a>
                                @*<input type="text" class="btn btn-primary" value="@TempData["userName"]"/>*@
                                @*@TempData["userName"]*@
                            }
                        </li>
                        <li style="align-content:center">
                            @Html.ActionLink("Logout", "PopUp", "Employee", null, new { id = "Logout" })
                        </li>
                    </ul>
                </div>

            }


        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Attendance Application. All Rights Reserved.

            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>





