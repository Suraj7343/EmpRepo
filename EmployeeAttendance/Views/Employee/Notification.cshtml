@model IEnumerable<EmployeeAttendance.BAL.Models.leaveVM>
@{
    ViewBag.Title = "Notification";
}
<br />
<br />
<div class="form-group btn-contact">
    <div class="col-md-6">
        <a class="btn btn-primary" href="/Employee/Index"><</a>
    </div>
</div>
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title text-center">Apply For Leave</h1>
    </div>
    <div class="panel-body">
        <h1 class="text-danger" id="msg">@TempData["message"]</h1>
        <div class="jumbotron">
            <div class="">
                <table class="table text-justify">
                    <tr>
                        @*<th>Id</th>*@
                        <th>StartDate</th>
                        <th>EndDate</th>
                        <th>Reason</th>
                        @*<th>Approve</th>
                        <th>Reject</th>*@
                        <th>Actions</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Id)

                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                                @Html.HiddenFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td class="text-success">
                                @Html.DisplayFor(modelItem => item.Reason)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Approve)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reject)
                            </td>*@
                            <td>
                                @Html.ActionLink("Details", "LeaveDetails", new { id = item.Id }) |
                                @Html.ActionLink("ApproveOrReject", "ApproveRejectRequest", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
@*<div class="form-group">
        <a class="btn btn-primary" href="/Employee/Index">BackToList</a>
    </div>*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#msg").fadeOut();
            }, 3000);
        });
    </script>
}
