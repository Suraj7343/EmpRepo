@model IEnumerable<EmployeeAttendance.BAL.Models.EmployeeVM>

@{
    ViewBag.Title = "Display";
}
</br>
</br>
<div class="form-group btn-contact">
    <div class="col-md-6">
        <a class="btn btn-primary" href="/Employee/Index"><</a>
    </div>
</div>
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title text-center">Search Employee</h1>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="col-lg-3">
                <input type="search" name="Search" class="form-control" placeholder="Search" />
            </div>
            <div class="col-lg-3">
                <button class=" btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        }
        <br />
        <br />
        <br />
        <div class="jumbotron">
            <div class="">
                <table class="table text-justify">
                    <tr>
                        <th> Employee Image</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Department</th>
                        @*<th>Project</th>*@
                        <th>Actions</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Content(item.EmployeeImage)" height="50" width="70" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                </td>*@
                            <td>
                                @Html.ActionLink("TimeDetails", "TimeDetails", new { id = item.EmployeeId }) |
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


