@model IEnumerable<EmployeeAttendance.BAL.Models.leaveVM>
@{
    ViewBag.Title = "TimeDetails";
}
<br />
<br />
@*<div class="form-group">
        @Html.ActionLink("Back To Index", "TotalTimeOfEmployees", "Employee", new { @class = "btn btn-primary" })
    </div>*@
<div class="form-group btn-contact">
    <div class="col-md-6">
        <a class="btn btn-primary" href="/Employee/TotalTimeOfEmployees"><</a>
    </div>
</div>
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title text-center">TimeDetails</h1>
    </div>
    <div class="panel-body">
        <br />
        <br />
        <div class="jumbotron">
            <div class="">
                <table class="table text-justify">
                    <tr>
                        @*<th>TimeStatus</th>*@
                        <th>ProjectName</th>
                        <th>TimeIn</th>
                        <th>TimeOut</th>
                        <th>TotalTime</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.ProjectID == null)
                                {
                                    <label class="text-danger">TotalTime</label>
                                }
                                else
                                {
                                    @*<label class=" text-danger">SingleProjectTime</label>
                                        <td>*@
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TimeInString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TimeOutString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalTime)
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>
</div>