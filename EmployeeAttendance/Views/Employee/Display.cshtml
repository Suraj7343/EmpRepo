@model IEnumerable<EmployeeAttendance.BAL.Models.EmployeeVM>

@{
    ViewBag.Title = "Display";
}
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title text-center">Search Employee</h1>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="col-lg-3">
                <input type="search" name="Search" class="form-control" placeholder="Search" />
            </div>
            <div class="col-lg-3">
                <button class=" btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        }
        <br />
        <br />
        <br />
        <div class="jumbotron">
            <div class="">
                <table class="table text-justify">
                    <tr>
                        <th>Employee Image</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>DateOfBirth</th>
                        <th>Address</th>
                        <th>Salary</th>
                        <th>Department</th>
                        @*<th>Project</th>*@
                        <th>Actions</th>
                        @*<th>Select</th>*@
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Content(item.EmployeeImage)" height="50" width="70" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.HiddenFor(modelItem => item.EmployeeId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeSalary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                </td>*@

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }) |   @*new { @class = "btn btn-primary" }*@
                                @Html.ActionLink("Details", "Details", new { id = item.EmployeeId }) |
                                @Html.ActionLink("SendMail", "SendM", new { id = item.EmployeeId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { onclick = "return confirm('want to delete?')" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
