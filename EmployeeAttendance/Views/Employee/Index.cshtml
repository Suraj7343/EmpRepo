@model PagedList.IPagedList<EmployeeAttendance.DAL.Data.EmployeeDetail>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Pagination";
}

<br />
<br />
<div class="form-group">
    <div class="col-md-6">
        <a class="btn btn-primary" href="/Employee/Create">Create New</a>
    </div>
</div>
<br />
<br />
@*<center>
    <p>*@
<div class="row">
    <div class="col-lg-3">
        <input type="search" name="Search" class="form-control" placeholder="Search" id="searchData" />
    </div>
    <div class="col-lg-3">
        <button class=" btn btn-primary" type="submit" id="btnSearchData" name="submit"><span class="glyphicon glyphicon-search"></span></button>
        @*<input type="submit" id="btnSearchData" name="submit" value="Search" />*@
    </div>
</div>
    @*</p>

</center>*@

<div id="partialView">
</div>
@*<div id="SearchPartialView">
    </div>*@

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts {
    <script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function() {
            $("#partialView").load('@Url.Content("/Employee/SearchByName")');
        });

        $('#btnSearchData').click(function () {
            var Search = $('#searchData').val();
         /*   alert(Search);*/
            $.ajax({
                type: "GET",   //POST
                url: "/Employee/SearchByName",
                data: {
                    Search: Search,
                },
                success: function (result) {
                    $('#partialView').html(result);
                }
            });
        });

    </script>
}

