@model IEnumerable<EmployeeAttendance.BAL.Models.DepartmentVM>
@{
    ViewBag.Title = "Index";
}
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title text-center">Department</h1>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="col-md-6">
                @*@Html.ActionLink("Logout", "LogOff", "Employee" ,new { @class = "btn btn-primary" })*@
                <a class="btn btn-primary" href="/DepartmentAndProject/CreateDepartment">Create New Department</a>
            </div>
        </div>
        <div class="jumbotron">
            <div class="">
                <table class="table text-justify">
                    <tr>

                        <th>
                            DepartmentName
                        </th>

                        <th>Actions</th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                                @Html.HiddenFor(modelItem => item.DepartmentId)
                            </td>


                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId }, new { onclick = "return confirm('want to delete?')" })
                            </td>
                        </tr>

                    }

                </table>
            </div>
        </div>
    </div>
</div>
